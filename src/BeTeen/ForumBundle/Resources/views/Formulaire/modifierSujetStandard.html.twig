{% extends "BeTeenIndexBundle:Layout:Global.html.twig" %}
{% block title %}Modifier un sujet | {{parent()}} {% endblock %}
{% block header %}
<link rel="stylesheet" href="{{ asset("css/Sujet.css") }}"/>
{% endblock %}
{% block body %}        
<article>
    <form method="post" {{form_enctype(form)}} >
	<div class="sujetHead">
		<p class="sujetCat" > {{sujet.categorie.nom}}</p>
		<h1 class="sujetTitle" >{{ form_widget(form.titre) }} </h1>
	</div>
	<div class="sujetBody">
		<p> 
                    {{ form_errors(form) }}
                    {{ form_widget(form.contenu) }}
                    {{ form_rest(form)}}
                    <input type="submit" value="envoyer"/>
		</p>
	</div>
    </form> 
	<div class="sujetFooter" style="background-image: url('{{ asset(sujet.auteur.backgroundChemin) }}');">
		<div class="sujetPhoto">
				<img src="{{ asset(sujet.auteur.avatarChemin) }}" alt="Avatar de {{sujet.auteur.username}}" />
		</div>
		<div class="sujetAuteur">
			<div class="meta">
				<p>
					Par {{sujet.auteur.username}}<br/>
					Le {{sujet.date|date("d/m/Y")}} a {{sujet.date|date ("H:i")}}
				</p>
			</div>
		</div>
	</div>
</article>
{% endblock %}