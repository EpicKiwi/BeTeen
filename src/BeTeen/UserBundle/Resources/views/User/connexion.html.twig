{% extends "BeTeenIndexBundle:Layout:boxLayout.html.twig" %}
{% block titleContent %}Connexion{% endblock %}
{% block boxContent %}
<form action="{{ path('login_check') }}" method="post">
        {% if error %}
          <div class="box">{{ error.message }}</div>
        {% endif %}
		<table>
          <tr>
			<td><label for="username">Identifiant</label></td>
			<td><input type="text" id="username" name="_username" value="{{ last_username }}" /></td>
		</tr>
		<tr>
			<td><label for="password">Mot de passe</label></td>
			<td><input type="password" id="password" name="_password" /></td>
		</tr>
		</table>
		<div class="rememberme"><input type="checkbox" id="remember_me" name="_remember_me" />
		<label for="_remember_me"/>Maintenir la connexion pour une semaine</label></div>
          <br />
          <input type="submit" value="Connexion" />
</form>
{% endblock %}